extends layout.pug 

block content 
    h1.title-create Update Post 

    form.form(action="/update/" + post.id method="POST")
        input(type="text" name="title" value=post.title) 
        textarea(name="body", cols="30", rows="10")= post.body         
        input(type="text" name="author" value=post.author) 
        button Update